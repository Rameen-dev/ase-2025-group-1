generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id                 Int                       @id @default(autoincrement())
  email                   String                    @unique
  password_hash           String
  role                    String
  is_verified             Boolean
  first_name              String
  last_name               String
  created_on              DateTime                  @default(now())
  updated_on              DateTime                  @updatedAt
  approved_applications   CharityApplications[]     @relation("approved_by_admin")
  reviewed_applications   CharityApplications[]     @relation("reviewed_by_admin")
  created_invites         CharitySignupTokens[]     @relation("invites_created_by")
  ClothingItems           ClothingItems[]
  donation_requests       DonationRequest[]         @relation("donor_request")
  donations_created       Donations[]               @relation("donor_donation")
  EmailVerificationTokens EmailVerificationTokens[]
  PasswordResetTokens     PasswordResetTokens[]
  Session                 Session[]
}

model EmailVerificationTokens {
  ev_token_id Int       @id @default(autoincrement())
  user_id     Int
  token       String    @unique
  expires_on  DateTime
  consumed_on DateTime?
  created_on  DateTime  @default(now())
  User        User      @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([user_id, created_on])
}

model PasswordResetTokens {
  pr_token_id Int       @id @default(autoincrement())
  user_id     Int
  code        String
  expires_on  DateTime
  consumed_on DateTime?
  created_on  DateTime  @default(now())
  User        User      @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([user_id, created_on])
}

model Charities {
  charity_id                 Int                   @id @default(autoincrement())
  name                       String
  email                      String                @unique
  phone                      String
  address                    String
  website                    String
  verified                   Boolean               @default(false)
  created_on                 DateTime              @default(now())
  updated_on                 DateTime              @updatedAt
  password_hash              String?
  applications               CharityApplications[]
  signup_tokens              CharitySignupTokens[]
  ClothingItems              ClothingItems[]
  donation_requests_answered DonationRequest[]     @relation("charity_answer")
  donations_received         Donations[]           @relation("charity_donation")
  Session                    Session[]
  Draft                      Draft[]

  @@index([name])
  @@index([email])
}

model CharityApplications {
  application_id Int        @id @default(autoincrement())
  org_name       String
  contact_name   String
  contact_email  String
  contact_number String
  website        String
  org_address    String
  charity_number String?
  reviewed_on    DateTime?
  reviewed_by    Int?
  approved_on    DateTime?
  approved_by    Int?
  charity_id     Int?
  created_on     DateTime   @default(now())
  updated_on     DateTime   @updatedAt
  status         Status     @default(PENDING)
  approver       User?      @relation("approved_by_admin", fields: [approved_by], references: [user_id])
  charity        Charities? @relation(fields: [charity_id], references: [charity_id])
  reviewer       User?      @relation("reviewed_by_admin", fields: [reviewed_by], references: [user_id])

  @@index([status, created_on])
  @@index([contact_email])
}

model CharitySignupTokens {
  invite_id   Int       @id @default(autoincrement())
  charity_id  Int
  email       String
  token       String    @unique
  expires_on  DateTime
  consumed_on DateTime?
  created_on  DateTime  @default(now())
  created_by  Int?
  charity     Charities @relation(fields: [charity_id], references: [charity_id], onDelete: Cascade)
  creator     User?     @relation("invites_created_by", fields: [created_by], references: [user_id])

  @@index([charity_id, created_on])
  @@index([email])
}

model Donations {
  donation_id         Int             @id @default(autoincrement())
  donation_request_id Int             @unique
  created_by          Int
  accepted_by         Int
  accepted_at         DateTime        @default(now())
  ClothingItems       ClothingItems[]
  accepted            Charities       @relation("charity_donation", fields: [accepted_by], references: [charity_id])
  creator             User            @relation("donor_donation", fields: [created_by], references: [user_id])
  request             DonationRequest @relation(fields: [donation_request_id], references: [donation_request_id])
}

model DonationRequest {
  donation_request_id Int             @id @default(autoincrement())
  created_on          DateTime        @default(now())
  updated_on          DateTime        @updatedAt
  status              Status          @default(PENDING)
  answered_by         Int?
  created_by          Int
  title               String
  ClothingItems       ClothingItems[]
  answering_charity   Charities?      @relation("charity_answer", fields: [answered_by], references: [charity_id])
  creator             User            @relation("donor_request", fields: [created_by], references: [user_id])
  accepted_donation   Donations?
}

model Session {
  session_id    Int              @id @default(autoincrement())
  session_token String           @unique
  actor_type    SessionActorType
  user_id       Int?
  charity_id    Int?
  created_on    DateTime         @default(now())
  expires_on    DateTime
  revoked_on    DateTime?
  charity       Charities?       @relation(fields: [charity_id], references: [charity_id])
  user          User?            @relation(fields: [user_id], references: [user_id])

  @@index([user_id])
  @@index([charity_id])
}

model ClothingItems {
  clothing_id         Int             @id @default(autoincrement())
  donation_request_id Int
  type                String
  size                String
  condition           String
  donor_id            Int
  donation_id         Int?
  owned_by            Int?
  front_image_url     String
  back_image_url      String
  status              Status          @default(PENDING)
  Donations           Donations?      @relation(fields: [donation_id], references: [donation_id])
  DonationRequest     DonationRequest @relation(fields: [donation_request_id], references: [donation_request_id])
  User                User            @relation(fields: [donor_id], references: [user_id])
  Charities           Charities?      @relation(fields: [owned_by], references: [charity_id])
  drafted_status      clothingDrafted @default(AVAILABLE)
  DraftedItem         DraftedItem[]
}

model AuditEvent {
  event_id            Int              @id @default(autoincrement())
  actor_type          SessionActorType
  actor_user_id       Int?
  actor_charity_id    Int?
  event_type          String
  donation_request_id Int?
  donation_id         Int?
  metadata            Json?
  created_on          DateTime         @default(now())

  @@index([event_type, created_on])
  @@index([donation_request_id])
}

model Draft {
  draft_id     Int         @id @default(autoincrement())
  charity_id   Int
  title        String
  draft_status draftStatus @default(DRAFT)
  created_at   DateTime    @default(now())
  edited_at    DateTime    @updatedAt
  

  charity Charities     @relation(fields: [charity_id], references: [charity_id], onDelete: Cascade)
  items   DraftedItem[]

  @@index([charity_id])
}

model DraftedItem {
  draft_id    Int
  clothing_id Int

  draft    Draft         @relation(fields: [draft_id], references: [draft_id], onDelete: Cascade)
  clothing ClothingItems @relation(fields: [clothing_id], references: [clothing_id], onDelete: Cascade)

  @@id([draft_id, clothing_id]) // composite PK prevents duplicates
  @@index([clothing_id])
}

enum clothingDrafted {
  ALLOCATED
  AVAILABLE
}

enum draftStatus {
  DRAFT
  CANCELLED
}

enum SessionActorType {
  DONOR
  CHARITY
  ADMIN
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}
